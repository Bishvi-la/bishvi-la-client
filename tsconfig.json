{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "ES6",
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "types": ["jest", "node"],
    "jsx": "react-native",
    "lib": ["ES6", "ES2017"],
    "target": "ES5",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./src/components/*"],
      "@/translation/*": ["./src/translation/*"],
      "@/assets/*": ["./assets/*"],
      "@/app/*": ["./app/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "./declarations/*.d.ts",
    "./assets/*",
    "./app/*",
    "./src/*"
  ],
  "exclude": ["./dist", "./node_modules"]
}
